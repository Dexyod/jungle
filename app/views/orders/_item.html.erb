<% item_total = line_item.product.price * line_item.quantity %>

  <tr>
    <td>
      <%= image_tag line_item.product.image.tiny %>
    </td>
    <td>
      <h4><%= line_item.product.name %></h4>
      <br>
      <p class="description"><%= line_item.product.description %></p>
    </td>
    <td>
      <%= humanized_money_with_symbol line_item.product.price %>
    </td>
    <td>
      <%= line_item.quantity %>
    </td>
    <td>
      <%= humanized_money_with_symbol item_total %>
    </td>
  </tr>